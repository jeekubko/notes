<h1>All notes</h1>
<h3>
    <%= link_to 'New Note', new_note_path %>
</h3>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @notes.each do |note| %>
        <tr>
            <td><%= note.id %></td>
            <td><%= link_to note.name, note %></td>
            <td><%= note.text %></td>
            <td><%= link_to 'Edit', edit_note_path(note) %></td>
            <td>
                <%= button_to 'Delete', note, method: :delete %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<br>
<strong><%= link_to 'Home', root_path %></strong>