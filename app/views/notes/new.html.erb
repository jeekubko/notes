<h1>New Note</h1>

<%= form_with url: notes_path do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :text %>
        <%= f.text_area :text %>
    </div>
    <%= f.submit 'Create' %>
<% end %>
<br>
<%= link_to 'Back to Notes', notes_path %>